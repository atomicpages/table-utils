{
    "name": "@table-utils/column-resize",
    "version": "0.0.1",
    "description": "",
    "scripts": {
        "pretest": "cp pkg/dist-browser/* test/",
        "posttest": "rm test/*.js*",
        "test": "npm run posttest",
        "build": "npm-run-all clean build:pika build:css",
        "build:css": "sass --source-map -s compressed assets/resize.scss:assets/resize.css",
        "clean": "rimraf pkg/ && npm run clean:css",
        "clean:css": "rimraf assets/resize.css*",
        "build:pika": "pika build",
        "check:types": "tsc --noEmit"
    },
    "keywords": [
        "column resize",
        "table"
    ],
    "author": "Dennis Thompson",
    "license": "MIT",
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg"
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-build-node"
            ],
            [
                "pika-plugin-legacy-browser",
                {
                    "name": "ColumnResize",
                    "sourcemap": true,
                    "minify": true
                }
            ],
            [
                "@pika/plugin-copy-assets"
            ]
        ]
    },
    "devDependencies": {
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.9.2",
        "@pika/plugin-build-web": "^0.9.2",
        "@pika/plugin-copy-assets": "^0.9.2",
        "@pika/plugin-ts-standard-pkg": "^0.9.2",
        "npm-run-all": "^4.1.5",
        "pika-plugin-legacy-browser": "^1.2.0",
        "rimraf": "^3.0.2",
        "sass": "^1.26.3",
        "typescript": "^3.8.3"
    }
}
